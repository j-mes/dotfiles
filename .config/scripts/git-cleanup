#!/bin/zsh

# -----------------------------
# Git Cleanup Script
# Purpose:
#   - Remove remote-tracking branches that no longer exist
#   - Delete local branches tracking deleted remote branches
#   - Delete local branches already merged into 'main'
# -----------------------------

# ğŸš§ Guard: Exit if not in a Git repository
if ! git rev-parse --is-inside-work-tree > /dev/null 2>&1; then
	echo "âŒ Not inside a Git repository. Aborting."
	exit 1
fi

# ğŸ”„ Fetch from remote and prune deleted remote-tracking branches
echo "ğŸ”„ Fetching and pruning remote branchesâ€¦"

prune_output=$(git fetch --prune 2>&1)
pruned_branches=$(echo "$prune_output" | grep -E ' \[pruned\]' | awk '{print $2}')

if [[ -n "$pruned_branches" ]]; then
	echo "Pruned remote-tracking branches:"
	echo "$pruned_branches"
else
	echo "ğŸ” No remote-tracking branches pruned."
fi

if [[ -n "$pruned_branches" ]]; then
    pruned_count=$(echo "$pruned_branches" | wc -l | tr -d ' ')
else
    pruned_count=0
fi

echo "ğŸ“¦ Removing local branches tracking deleted remotesâ€¦"

gone_branches=$(git branch -vv | grep ': gone]' | grep -v "\*" | awk '{ print $1; }')
deleted_gone_count=0

if [[ -n "$gone_branches" ]]; then
	echo "Deleting local branches tracking deleted remotes:"

	for branch in $gone_branches; do
		echo "  $branch"
		git branch -d "$branch" && ((deleted_gone_count++))
	done
else
	echo "ğŸ” No local branches tracking deleted remotes found."
fi

# âœ… Delete local branches already merged into 'main'
echo "âœ… Deleting branches already merged into 'main'â€¦"

merged_branches=$(git branch --merged main | grep -v '^[ *]*main$')
deleted_merged_count=0

if [[ -n "$merged_branches" ]]; then
	echo "Deleting local branches already merged into 'main':"

	for branch in $merged_branches; do
		echo "  $branch"
		git branch -d "$branch" && ((deleted_merged_count++))
	done
else
	echo "ğŸ” No local branches already merged into 'main' found."
fi

# ğŸ“Š Summary
echo ""
echo "ğŸ“¦ $deleted_gone_count | ğŸ”„ $pruned_count | âœ… $deleted_merged_count"
echo "ğŸ‰ Total cleaned: $((pruned_count + deleted_gone_count + deleted_merged_count))"
